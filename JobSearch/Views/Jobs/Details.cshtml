@model JobSearch.Models.JobModels.JobApplications

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
@{
    int id = 0;
    int role = 0;
    HttpCookie reqCookies = Request.Cookies["userInfo"];
    if (reqCookies != null)
    {
        id = Convert.ToInt32(reqCookies["Id"].ToString());
        role = Convert.ToInt32(reqCookies["Role"].ToString());
        if (role == 2)
        {
            @Html.ActionLink("Create New", "Create")
        }
    }
}
<div>
    <h4>JobApplications</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Position)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Position)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FullPart)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullPart)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Qualifications)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Qualifications)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Deadline)
        </dd>

    </dl>
</div>
<p>
    @{
        if (Model.Applications.Contains(id))
        {
            <p>You have applied for this job</p>
        }
        else
        {
            @Html.ActionLink("Apply", "Apply", new { id = Model.JobId })
        }
        @Html.ActionLink("View Comments","Index", "Comments")
    }
</p>
