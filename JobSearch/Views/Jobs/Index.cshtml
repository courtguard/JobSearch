@model IEnumerable<JobSearch.Models.JobModels.Job>

@{
    ViewBag.Title = "Index";
}

<style type="text/css">
    h2 {
        color: #3366DD;
        font-weight: bold;
    }
    img {
        height: 20%;
        width: 100%;
        border-radius:20px;
    }
</style>



<p>
    @{
        int id = 0;
        int role = 0;
        HttpCookie reqCookies = Request.Cookies["userInfo"];
        if (reqCookies != null)
        {
            id = Convert.ToInt32(reqCookies["Id"].ToString());
            role = Convert.ToInt32(reqCookies["Role"].ToString());
            if (role == 2)
            {
                @Html.ActionLink("Offer A Job", "Create", new { id = 1 }, new { @class = "btn btn-primary" })
            }
        }
    }
</p>
<img src="https://www.gigroup.com/pics/gigroup-ibm-banner.jpg" />
<h2>Available jobs</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Profile.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullPart)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qualifications)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadline)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Profile.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullPart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qualifications)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deadline)
            </td>
            <td>
                @{
                    if (id == item.ProfileId)
                    {
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary", @style = "margin-right:10px" })

                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    }
                    if (role == 1)
                    {
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                    }
                }
            </td>
        </tr>
    }

</table>
