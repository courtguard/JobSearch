@model IEnumerable<JobSearch.Models.JobModels.ApplicantsForJob>

@{
    ViewBag.Title = "Index";
}
<style type="text/css">
    td,th{
        text-align:center;
    }
</style>

<h2 style="color:#3366DD">Applicants</h2>

<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Education)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CV)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Experience)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PreviousProjects)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Approved)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.eAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Education)
        </td>
        <td>
            <a href="@Html.DisplayFor(modelItem => item.CV)">@Html.DisplayFor(modelItem => item.Name)'s CV</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Experience)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PreviousProjects)
        </td>
            @{ 
                if (item.Approved == "Approved") { 
                    <td> Approved</td>
                }
                else if(item.Approved == "Denied")
                {
                    <td> Denied </td>
                }
                else
                {
                    <td>
                    @Html.ActionLink("Approve","Approve",new { id=item.ProfileId},new { @class = "btn btn-primary" })
                    @Html.ActionLink("Deny","Deny",new { id=item.ProfileId },new { @class = "btn btn-primary" })
                    </td>
                }
            }
    </tr>
}
</table>